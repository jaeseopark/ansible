services:
  rtl433:
    image: hertzg/rtl_433:23.11
    devices:
      - "{{ rtl_usb_path }}"
    command:
      - "-Mtime:unix:usec:utc"
      - "-Mbits"
      - "-Mlevel"
      - "-Mnoise"
      - "-Mprotocol"
      - "-Mstats:2:300"
      - "-Fmqtt://{{mqtt_host}},events=rtl_433[/model][/id],user={{ mqtt_user }},pass={{ mqtt_password }}" # password comes from defaults/main.yml
      - "-Ylevel=0" # Manual detection level used to determine pulses (-1.0 to -30.0) (0=auto).
      - "-Yautolevel" # Set minlevel automatically based on average estimated noise.
