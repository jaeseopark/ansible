version: "3"
services:
  filebrowser:
    image: filebrowser/filebrowser:latest
    restart: unless-stopped
    user: "{{ uid }}:{{ gid }}"
    ports:
      - "{{ filebrowser_port }}:8080"
    volumes:
      - "{{ data_path }}:/srv"
      - "{{ db_file_path }}:/database/filebrowser.db"
      - "{{ config_file_path }}:/.filebrowser.json"
