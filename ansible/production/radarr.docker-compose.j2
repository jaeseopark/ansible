
---
version: "2.1"
services:
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ timezone }}
    volumes:
      - {{ mnt_path }}/config:/config
      - {{ library_path }}:/movies
      - {{ download_dest_path }}:/downloads/complete
    ports:
      - 7878:7878
    restart: unless-stopped
